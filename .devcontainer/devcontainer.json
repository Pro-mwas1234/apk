{
  "name": "Kotlin Android Dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/java:17": {},
    "ghcr.io/devcontainers/features/gradle:8": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "fwcd.kotlin",
        "ms-vscode.gradle-extension-pack",
        "redhat.java"
      ],
      "settings": {
        "java.home": "/usr/lib/jvm/msopenjdk-17",
        "kotlin.compiler.jvmTarget": "17"
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/setup-android.sh",
  "remoteUser": "vscode"
}
